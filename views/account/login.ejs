<div class="login-page">
    <h1 class="title-login"><%= title %></h1>

    <!-- Flash Message Display -->
    <% if (messages.length > 0) { %>
        <div class="flash-messages">
            <% for (let i = 0; i < messages.length; i++) { %>
                <p class="flash-message"><%= messages[i] %></p>
            <% } %>
        </div>
    <% } %>
    

    <!-- Login Form -->
    <form id="loginForm" action="/account/login" method="POST" class="login-form">
        <div class="form-group">
            <label for="email">Email address:</label>
            <input type="email" id="account_email" name="account_email" required>
        </div>

        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        </div>

        <button class="button1" type="submit">Login</button>
    </form>

    <!-- Registration Link -->
    <p>If you do not yet have an account, <a href="/account/register">register here</a>.</p>
</div>
